<div class='bg-white rounded-5 py-3 px-5 shadow'>
  <h1>Editar aviso</h1>
  
  <%= form_with model: @announcement do |f| %>
    <div class="form-row d-flex justify-content-center">
      <div class="form-group col-md-8">
        <%= f.label :title %>
        <%= f.text_field :title, class:"form-control #{'is-invalid' if @announcement.errors[:title].any?}" %>
        <%= render("shared/errors", model: @announcement, attribute: :title) if @announcement.errors[:title].any? %>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <div class="form-group col-md-8">
        <%= f.label :message %>
        <%= f.rich_text_area :message, class:"form-control #{'is-invalid' if @announcement.errors[:message].any?}" %>
        <%= render("shared/errors", model: @announcement, attribute: :message) if @announcement.errors[:message].any? %>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <%= f.submit 'Salvar', class:"btn btn-dark rounded-pill px-4 mt-3" %>
    </div>
  <% end %>
</div>