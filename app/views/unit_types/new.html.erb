<h1>Cadastrar um novo tipo de unidade</h1>

<%=  render 'shared/errors', model: @unit_type %>

<%= form_with(model: @unit_type) do |f| %>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description%>
  </div>

  <div>
    <%= f.label :metreage %>
    <%= f.number_field :metreage%>
  </div>

  <div>
    <%= f.submit 'Cadastrar' %>
  </div>
<% end %>