<h1 class="mb-4">Cadastrar Morador</h1>

<%= form_with model: @resident do |f| %>
  <div>
    <%= f.label :full_name %>
    <%= f.text_field :full_name %>
  </div>
  <div>
    <%= f.label :registration_number %>
    <%= f.text_field :registration_number %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.text_field :password %>
  </div>
  <div>
    <%= f.label :resident_type %>
    <%= f.select :resident_type, Resident.resident_types.keys.map { |type| [t(type).capitalize, type] } %>
  </div>

  <div data-controller="resident" data-condo-json="<%= @condos_json %>">
    <div>
      <%= f.label :condo_id %>
      <%= f.collection_select :condo_id, @condos, :id, :name, {}, :'data-resident-target' => "condo", :'data-action' => "change->resident#changeCondo" %> 
    </div>
    <div>
      <%= f.label :tower_id %>
      <%= f.collection_select :tower_id, {}, {}, {}, {}, :'data-resident-target' => "tower", :'data-action' => "change->resident#changeTower" %> 
    </div>
    <div>
      <%= f.label :floor %>
      <%= f.collection_select :floor, {}, {}, {}, {}, :'data-resident-target' => "floor" %> 
    </div>
    <div>
      <%= f.label :unit %>
      <%= f.collection_select :unit, {}, {}, {}, {}, :'data-resident-target' => "unit" %> 
    </div>
  </div>

  <%= f.submit "Enviar" %>
<% end %>