<h2>Redifina sua Senha</h2>

<div class="card shadow-sm">
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: 'text-center') do |f| %>
      <%= render "residents/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-3 row">
        <%= f.label :password, "Senha (#{@minimum_password_length} mÃ­nimo caracteres)", class: 'col-sm-3 col-form-label text-end' %>
        <div class="col-sm-9"><%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %></div>
      </div>

      <div class="mb-3 row">
        <%= f.label :password_confirmation, class: 'col-sm-3 col-form-label text-end' %>
        <div class="col-sm-9"><%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %></div>
      </div>

      <div class="actions d-flex justify-content-center">
        <%= f.submit "Alterar Senha", class: 'btn btn-dark' %>
      </div>
    <% end %>
  </div>
</div>
