<h1>Cadastrar Novo Administrador</h1>

<% if @manager.errors.any? %>
  <p>Verifique os erros abaixo:</p>
  <ul>
    <% @manager.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@manager) do |f| %>
  <div>
    <%= f.label :user_image %>
    <%= f.file_field :user_image %>
  </div>
  <div>
    <%= f.label :full_name %>
    <%= f.text_field :full_name %>
  </div>
  <div>
    <%= f.label :registration_number %>
    <%= f.text_field :registration_number %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <%= f.submit 'Cadastrar' %>
<% end %>